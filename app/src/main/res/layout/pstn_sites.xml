<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"

        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end">

        <TextView
            android:id="@+id/time"
            android:text=""
            android:textColor="#000000"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"/>

            <ImageView
                android:id="@+id/refresh"
                android:src="@mipmap/refresh"
                android:layout_gravity="end"
                android:textColor="#0331a4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="end"
        />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:layout_gravity="center"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:textStyle="bold"
                android:background="#ef8700"
                android:layout_marginLeft="10dp"
                android:text="TOTAL PSTN SITES"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"/>

            <Button
                android:textStyle="bold"
                android:background="#ef8700"
                android:layout_marginLeft="10dp"
                android:text="COMPLETED SITES"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:background="#2d4fae"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:id="@+id/totalpstn"
                android:textSize="35dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:background="#2d4fae"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:id="@+id/completed"
                android:textSize="35dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:background="#ef8700"
                android:layout_marginLeft="10dp"
                android:text="DISMANTLING IN-PROGRESS"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:layout_marginLeft="10dp"
                android:background="#ef8700"
                android:text="REMAINING"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_marginLeft="10dp"
                android:background="#2d4fae"
                android:textColor="#ffffff"
                android:id="@+id/inprogress"
                android:textSize="35dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:layout_marginLeft="10dp"
                android:background="#2d4fae"
                android:textColor="#ffffff"
                android:id="@+id/remaining"
                android:textSize="35dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:background="#ef8700"
                android:layout_marginLeft="10dp"
                android:text="LOCK-IN SALES (RM)"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:layout_marginLeft="10dp"
                android:background="#ef8700"
                android:text="YTD TOTAL PAYMENT RECEIVED (RM)"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_marginLeft="10dp"
                android:background="#2d4fae"
                android:textColor="#ffffff"
                android:id="@+id/money"
                android:text=""
                android:textSize="28dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:layout_marginLeft="10dp"
                android:background="#2d4fae"
                android:textColor="#ffffff"
                android:id="@+id/vendor"
                android:textSize="28dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>